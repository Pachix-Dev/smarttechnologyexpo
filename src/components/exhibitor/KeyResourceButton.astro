---
import { useTranslations, getTranslation } from "../../utils/translations";
const { locale, translations } = await useTranslations(Astro.props, Astro);
const tr = (key: string, fallback: string = "") =>
  getTranslation(translations, key, fallback);
const basePath = locale === "en" ? "/en" : "";
---

<section
  class="w-full flex flex-col items-center justify-center bg-black/80 py-12"
>
  <h2 class="text-2xl md:text-5xl font-black text-white text-center mb-8">
    {tr("beExhibitor.title_key_resources")}
  </h2>
  <p class="max-w-3xl text-center text-white text-sm sm:text-xl mb-10 px-4">
    {tr("beExhibitor.desc_key_resources")}
  </p>
  <div
    class="w-full max-w-6xl shadow-lg flex flex-col md:flex-row divide-y md:divide-y-0 md:divide-x divide-[#222] overflow-hidden animate-fade-in gap-4 px-4"
  >
    <!-- PLANO DEL EVENTO -->
    <div
      class="flex-1 flex flex-col items-center justify-between bg-[#111] px-6 py-8 sm:px-8 sm:py-12 relative border border-transparent hover:border-red-500 transition-all duration-200 group"
    >
      <div class="flex flex-col items-center mb-6">
        <div class="mb-4">
          <!-- Icono de tríptico -->
          <svg
            width="36"
            height="36"
            fill="none"
            viewBox="0 0 32 32"
            class="sm:w-10 sm:h-10 w-9 h-9"
          >
            <rect
              x="4"
              y="7"
              width="7"
              height="18"
              rx="1"
              stroke="#ff3c3c"
              stroke-width="2"
              fill="none"></rect>
            <rect
              x="13"
              y="5"
              width="6"
              height="22"
              rx="1"
              stroke="#ff3c3c"
              stroke-width="2"
              fill="none"></rect>
            <rect
              x="21"
              y="7"
              width="7"
              height="18"
              rx="1"
              stroke="#ff3c3c"
              stroke-width="2"
              fill="none"></rect>
          </svg>
        </div>
        <div
          class="font-extrabold text-xl sm:text-2xl text-white mb-2 tracking-wide text-center"
        >
          {tr("beExhibitor.floorPlan_item")}
        </div>
        <a
          href="/files/PLANO_STE_2026_091225.pdf"
          target="_blank"
          class="w-full flex justify-center"
        >
          <button
            class="mt-2 inline-flex items-center gap-1 px-3 py-2 sm:px-4 sm:py-2 rounded-md bg-[#ff3c3c] text-white text-xs sm:text-sm font-mono font-semibold shadow border border-[#ff3c3c] hover:bg-transparent hover:text-[#ff3c3c] transition-colors duration-200 focus:outline-none"
            type="button"
          >
            {tr("beExhibitor.btn_floorPlan")}
            <span aria-hidden="true">→</span>
          </button>
        </a>
      </div>
    </div>
    <!-- FACTSHEET -->
    <div
      class="flex-1 flex flex-col items-center justify-between bg-[#111] px-6 py-8 sm:px-8 sm:py-12 relative border border-transparent hover:border-red-500 transition-all duration-200 group"
    >
      <div class="flex flex-col items-center mb-6">
        <div class="mb-4">
          <!-- Icono de documento simple -->
          <svg
            width="36"
            height="36"
            fill="none"
            viewBox="0 0 24 24"
            class="sm:w-10 sm:h-10 w-9 h-9"
          >
            <rect
              x="5"
              y="3"
              width="14"
              height="18"
              rx="2"
              stroke="#ff3c3c"
              stroke-width="2"
              fill="none"></rect>
            <line x1="8" y1="7" x2="16" y2="7" stroke="#ff3c3c" stroke-width="2"
            ></line>
            <line
              x1="8"
              y1="11"
              x2="16"
              y2="11"
              stroke="#ff3c3c"
              stroke-width="2"></line>
            <line
              x1="8"
              y1="15"
              x2="13"
              y2="15"
              stroke="#ff3c3c"
              stroke-width="2"></line>
          </svg>
        </div>
        <div
          class="font-extrabold text-xl sm:text-2xl text-white mb-2 tracking-wide text-center"
        >
          FACTSHEET
        </div>
        <a
          href={locale === "en"
            ? "/files/STE_FACTSHEET_ENG_2026_ed.pdf"
            : "/files/STE_FACTSHEET_ESP_2026_ed.pdf"}
          target="_blank"
          class="w-full flex justify-center"
        >
          <button
            class="mt-2 inline-flex items-center gap-1 px-3 py-2 sm:px-4 sm:py-2 rounded-md bg-[#ff3c3c] text-white text-xs sm:text-sm font-mono font-semibold shadow border border-[#ff3c3c] hover:bg-transparent hover:text-[#ff3c3c] transition-colors duration-200 focus:outline-none"
            type="button"
          >
            {tr("beExhibitor.btn_factsheet")}
            <span aria-hidden="true">→</span>
          </button>
        </a>
      </div>
    </div>
    <!-- PATROCINADOR -->
    <div
      class="flex-1 flex flex-col items-center justify-between bg-[#111] px-6 py-8 sm:px-8 sm:py-12 relative border border-transparent hover:border-red-500 transition-all duration-200 group"
    >
      <div class="flex flex-col items-center mb-6">
        <div class="mb-4">
          <!-- Icono de estrella simple -->
          <svg
            width="36"
            height="36"
            fill="none"
            viewBox="0 0 24 24"
            class="sm:w-10 sm:h-10 w-9 h-9"
          >
            <polygon
              points="12 4 14.09 9.26 19.5 9.27 15 12.97 16.18 18.02 12 15 7.82 18.02 9 12.97 4.5 9.27 9.91 9.26 12 4"
              stroke="#ff3c3c"
              stroke-width="2"
              fill="none"
              stroke-linejoin="round"></polygon>
          </svg>
        </div>
        <div
          class="font-extrabold text-xl sm:text-2xl text-white mb-2 tracking-wide text-center"
        >
          {tr("beExhibitor.sponsor_item")}
        </div>
        <a
          href={locale === "en"
            ? "/en/expositor-smarttechnologyexpo"
            : "/expositor-smarttechnologyexpo"}
          class="w-full flex justify-center"
        >
          <button
            class="mt-2 inline-flex items-center gap-1 px-3 py-2 sm:px-4 sm:py-2 rounded-md bg-[#ff3c3c] text-white text-xs sm:text-sm font-mono font-semibold shadow border border-[#ff3c3c] hover:bg-transparent hover:text-[#ff3c3c] transition-colors duration-200 focus:outline-none"
            type="button"
          >
            {tr("beExhibitor.btn_sponsor")}
            <span aria-hidden="true">→</span>
          </button>
        </a>
      </div>
    </div>
  </div>
  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fade-in 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }
  </style>
</section>
