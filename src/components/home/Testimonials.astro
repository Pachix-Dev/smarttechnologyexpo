<section class='py-12 md:py-20 bg-white relative overflow-hidden'>
  <!-- Pattern decorativo de fondo -->
  <div class='absolute inset-0 opacity-5'>
    <svg class='w-full h-full' xmlns='http://www.w3.org/2000/svg'>
      <defs>
        <pattern id='grid' width='40' height='40' patternUnits='userSpaceOnUse'>
          <path d='M 40 0 L 0 0 0 40' fill='none' stroke='currentColor' stroke-width='1'/>
        </pattern>
      </defs>
      <rect width='100%' height='100%' fill='url(#grid)' />
    </svg>
  </div>

  <div class='container mx-auto px-4 relative z-10'>
    <!-- Header principal -->
    <div class='text-center mb-16'>
      <h2 class='text-4xl md:text-5xl font-black text-gray-900 mb-4'>
        Lo que dicen de nosotros
      </h2>
      <div class='w-24 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto mb-6'></div>
      <p class='text-xl text-gray-600 max-w-3xl mx-auto'>
        Testimonios reales de empresas y profesionales que han participado en nuestros eventos
      </p>
    </div>

    <!-- Testimonios de Expositores -->
    <div class='mb-20'>
      <div class='flex items-center justify-center gap-3 mb-10'>
        <div class='w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center shadow-lg'>
          <svg class='w-6 h-6 text-white' fill='currentColor' viewBox='0 0 20 20'>
            <path d='M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z'/>
          </svg>
        </div>
        <h3 class='text-2xl md:text-3xl font-bold text-gray-900'>
          {tr('home.exhibitors')}
        </h3>
      </div>

      <div class='grid md:grid-cols-2 lg:grid-cols-2 gap-6 max-w-5xl mx-auto'>
        {exhibitorsTestimonials.map((testimonial, index) => (
          <div
            class='group relative bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-500 overflow-hidden p-6'
            style={`animation: slideUp 0.6s ease-out ${index * 150}ms forwards; opacity: 0;`}
          >
            <!-- Imagen con bloques decorativos -->
            <div class='relative mb-4 h-32'>
              <!-- Bloques decorativos -->
              <div class='absolute top-0 left-0 w-16 h-16 bg-gray-200 opacity-50'></div>
              <div class={`absolute top-4 left-4 w-16 h-16 bg-gradient-to-br ${testimonial.color} opacity-30`}></div>
              
              <!-- Imagen -->
              <div class='absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10 w-24 h-24'>
                <img 
                  src={testimonial.image} 
                  alt={testimonial.name}
                  class='w-full h-full object-contain'
                />
              </div>
            </div>
            
            <!-- Contenido -->
            <div class='text-center'>
              <h3 class='text-lg font-bold text-gray-900 mb-1'>
                {testimonial.name}
              </h3>
              <p class='text-sm font-semibold text-gray-700 mb-0.5'>{testimonial.company}</p>
              <p class='text-xs text-gray-600 mb-3'>{testimonial.role}</p>
              
              <!-- Icono de cita -->
              <svg class='w-6 h-6 text-red-600 mx-auto mb-2' fill='currentColor' viewBox='0 0 24 24'>
                <path d='M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z' />
              </svg>
              
              <p class='text-gray-700 text-sm leading-relaxed italic'>
                {testimonial.text}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Testimonios de Visitantes -->
