---
import { hotels } from "../../data/directorio_turistico";

import { useTranslations, getTranslation } from '../../utils/translations'
// âœ¨ Una sola lÃ­nea para cargar traducciones!
const { translations } = await useTranslations(Astro.props, Astro)
// ðŸŽ¯ Helper para traducciones mÃ¡s elegante
const tr = (key: string, fallback: string = '') =>
  getTranslation(translations, key, fallback)
---
<section class="relative isolate py-16 px-6 md:px-12 lg:px-20 bg-linear-to-br from-[#0f0a0a] via-[#1a0d0e] to-[#0b1016] text-white">
  <div class="max-w-5xl mx-auto text-center md:mb-16 mb-10">
    <h1
      class="font-black text-3xl md:text-4xl lg:text-5xl uppercase tracking-wide mb-3 text-transparent bg-clip-text bg-linear-to-r from-[#ff4d4d] via-[#e03a3a] to-[#c7312a]"
    >
      {tr("hotels.title")}
    </h1>
    <!-- <p
      class="text-base md:text-lg text-slate-200/80 max-w-3xl mx-auto"
      set:html={tr("hotels.description", "Encuentra hospedaje aliado con tarifas preferenciales.")}
    /> -->
  </div>
  <div
    class="mx-auto max-w-7xl grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    {
      hotels.map((hotel) => (
        <div class="group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 shadow-xl backdrop-blur-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
          <span class="absolute inset-x-0 top-0 h-1 bg-linear-to-r from-[#c7312a] via-[#e03a3a] to-[#8a2b23]" />

          <div class="relative overflow-hidden">
            <img
              class="w-full h-60 object-cover transition-transform duration-500 group-hover:scale-110"
              src={`/img/${hotel.src}`}
              alt={hotel.name}
            />
            <div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/0 to-black/0" />
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h5 class="text-xl font-bold text-white drop-shadow-lg">
                {hotel.name}
              </h5>
            </div>
          </div>

          <div class="p-5 space-y-4">
            <div class="space-y-3">
              <div class="flex items-start gap-3 p-3 bg-white/5 rounded-xl border border-white/5 transition-colors group-hover:border-[#e03a3a]">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-5 h-5 mt-0.5 shrink-0 text-[#e03a3a]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                  />
                </svg>
                <p class="text-slate-100 text-sm leading-relaxed">
                  {hotel.address}
                </p>
              </div>

              <div class="flex items-center gap-3 p-3 bg-white/5 rounded-xl border border-white/5 transition-colors group-hover:border-[#e03a3a]">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-5 h-5 shrink-0 text-[#e03a3a]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"
                  />
                </svg>
                <p class="text-slate-100 text-sm font-semibold">{hotel.phone}</p>
              </div>
            </div>
            {/* <div class="bg-linear-to-r from-[#565078] to-[#6a5f8e] text-white p-3.5 rounded-lg">
              <p class="text-sm font-semibold mb-1">{tr("hotels.rate")}</p>
              <p class="text-2xl font-bold" set:html={hotel.rate}></p>
              <p class="text-xs opacity-90">+ {tr("hotels.taxes")}</p>
            </div> */}
            <div class="space-y-2">
              <div class="flex items-center gap-3 text-sm text-slate-200 bg-white/5 p-2.5 rounded-lg border border-white/5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-4 h-4 shrink-0"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                  />
                </svg>
                <span class="text-xs break-all">{hotel.email}</span>
              </div>

              {/* <div class="bg-amber-50 border border-amber-200 p-2.5 rounded-lg">
                <p class="text-xs text-amber-800 mb-1">{tr("hotels.code")}</p>
                <p class="text-base font-bold text-amber-900">{hotel.code}</p>
              </div> */}
            </div>

            <div class="flex gap-3">
              <div class="flex items-center gap-2 bg-[#e03a3a]/15 border border-[#e03a3a]/30 px-3 py-2 rounded-lg flex-1">
                <img src="/img/walk_icon.webp" width={18} class="bg-white border border-white rounded" />
                <span class="text-sm font-semibold text-[#ffffff]">
                  {hotel.time_walk} min
                </span>
              </div>
              <div class="flex items-center gap-2 bg-white/5 border border-white/10 px-3 py-2 rounded-lg flex-1">
                <img src="/img/car_icon.webp" width={18} class="bg-white border border-white rounded" />
                <span class="text-sm font-semibold text-slate-100">
                  {hotel.time_drive} min
                </span>
              </div>
            </div>

            {hotel?.link && (
              <a
                href={hotel.link}
                target="_blank"
                class="w-full inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold text-white bg-linear-to-r from-[#c7312a] via-[#e03a3a] to-[#8a2b23] rounded-lg hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300"
              >
                {tr("hotels.book")}
                <svg
                  class="rtl:rotate-180 w-4 h-4"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                  />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>

