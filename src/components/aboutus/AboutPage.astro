---
import Layout from '../../layouts/Layout.astro'
import { useTranslations, getTranslation } from '../../utils/translations'

export interface Props {
  locale?: string
}

// ‚ú® Una sola l√≠nea para cargar traducciones!
const { translations } = await useTranslations(Astro.props, Astro)

// üéØ Helper para traducciones m√°s elegante (opcional)
const tr = (key: string, fallback: string = '') =>
  getTranslation(translations, key, fallback)
---

<Layout
  title={tr('site.title', 'Smart Technology Expo')}
  description={tr('site.description', 'Expo de tecnolog√≠a inteligente')}
>
  <main class='bg-linear-to-b from-white via-gray-50 to-white'>
    <!-- Hero Section -->
    <div
      class='relative overflow-hidden bg-linear-to-r from-red-600 via-red-500 to-[#9E2D25] py-20 md:py-32'
    >
      <div class='container mx-auto px-4 relative z-10'>
        <h1
          class='text-center text-4xl md:text-6xl font-extrabold text-white mb-6'
          data-aos='fade-down'
          data-aos-duration='1000'
        >
          {tr('aboutPage.title')}
        </h1>
        <div
          class='w-24 h-1 bg-white mx-auto rounded-full'
          data-aos='zoom-in'
          data-aos-duration='800'
          data-aos-delay='300'
        >
        </div>
        <p
          class='text-center text-white/90 text-lg md:text-xl mt-6 max-w-3xl mx-auto'
          data-aos='fade-up'
          data-aos-duration='1000'
          data-aos-delay='400'
        >
          {tr('aboutPage.subtitle')}
        </p>
      </div>
      <!-- Decorative elements -->
      <div class='absolute -bottom-1 left-0 right-0'>
        <svg
          viewBox='0 0 1440 120'
          fill='none'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            d='M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z'
            fill='white'></path>
        </svg>
      </div>
    </div>

    <!-- Primera Secci√≥n -->
    <section class='py-16 md:py-24 overflow-hidden'>
      <div class='container mx-auto px-4'>
        <div class='flex flex-col md:flex-row items-center gap-8 md:gap-12'>
          <!-- Imagen -->
          <div
            class='w-full md:w-1/2 relative group'
            data-aos='fade-right'
            data-aos-duration='1000'
          >
            <div
              class='relative overflow-hidden rounded-2xl shadow-2xl transform transition-all duration-500 group-hover:scale-105'
            >
              <div
                class='absolute inset-0 bg-linear-to-tr from-red-600/30 to-transparent z-10 group-hover:opacity-0 transition-opacity duration-500'
              >
              </div>
              <img
                src='/img/bgabout_1.jpg'
                alt='About Smart Technology Expo'
                class='w-full h-[400px] md:h-[500px] object-cover'
              />
              <!-- Decorative border -->
              <div
                class='absolute inset-0 border-4 border-red-500/20 rounded-2xl'
              >
              </div>
            </div>
            <!-- Floating badge -->
            <div
              class='absolute -bottom-6 -right-6 bg-red-600 text-white p-6 rounded-xl shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-300'
              data-aos='zoom-in'
              data-aos-duration='800'
              data-aos-delay='600'
            >
              <div class='text-center'>
                <div class='text-3xl font-bold'>2026</div>
                <div class='text-sm'>Next Edition</div>
              </div>
            </div>
          </div>

          <!-- Contenido -->
          <div
            class='w-full md:w-1/2'
            data-aos='fade-left'
            data-aos-duration='1000'
            data-aos-delay='300'
          >
            <div class='prose prose-lg max-w-none'>
              <!-- Decorative element -->
              <div class='flex items-center gap-4 mb-6'>
                <div
                  class='w-12 h-1 bg-linear-to-r from-red-600 to-pink-600 rounded-full'
                >
                </div>
                <span
                  class='text-red-600 font-semibold uppercase tracking-wider text-sm'
                  >{tr('aboutPage.our_story')}</span
                >
              </div>

              <div
                class='text-gray-700 leading-relaxed space-y-4 text-justify'
                set:html={tr('aboutPage.description_1')}
              />

              <!-- Feature highlights -->
              <div class='grid grid-cols-2 gap-4 mt-8'>
                <div
                  class='bg-linear-to-br from-red-50 to-pink-50 p-4 rounded-xl border border-red-100'
                  data-aos='flip-left'
                  data-aos-duration='800'
                  data-aos-delay='800'
                >
                  <div class='text-red-600 text-3xl font-bold mb-1'>+275</div>
                  <div class='text-gray-600 text-sm'>
                    {tr('home.exhibitors')}
                  </div>
                </div>
                <div
                  class='bg-linear-to-br from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-100'
                  data-aos='flip-left'
                  data-aos-duration='800'
                  data-aos-delay='900'
                >
                  <div class='text-blue-600 text-3xl font-bold mb-1'>+15K</div>
                  <div class='text-gray-600 text-sm'>{tr('home.visitors')}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Divider decorativo -->
    <div class='container mx-auto px-4'>
      <div
        class='flex items-center justify-center gap-4 py-8'
        data-aos='zoom-in'
        data-aos-duration='800'
      >
        <div
          class='h-px bg-linear-to-r from-transparent via-red-300 to-transparent flex-1'
        >
        </div>
        <div class='flex gap-2'>
          <div class='w-2 h-2 bg-red-600 rounded-full animate-pulse'></div>
          <div
            class='w-2 h-2 bg-red-500 rounded-full animate-pulse'
            style='animation-delay: 0.2s;'
          >
          </div>
          <div
            class='w-2 h-2 bg-red-400 rounded-full animate-pulse'
            style='animation-delay: 0.4s;'
          >
          </div>
        </div>
        <div
          class='h-px bg-linear-to-r from-transparent via-red-300 to-transparent flex-1'
        >
        </div>
      </div>
    </div>

    <!-- Segunda Secci√≥n -->
    <section
      class='py-16 md:py-24 bg-linear-to-br from-gray-50 to-white overflow-hidden'
    >
      <div class='container mx-auto px-4'>
        <div
          class='flex flex-col md:flex-row-reverse items-center gap-8 md:gap-12'
        >
          <!-- Imagen -->
          <div
            class='w-full md:w-1/2 relative group'
            data-aos='fade-left'
            data-aos-duration='1000'
          >
            <div
              class='relative overflow-hidden rounded-2xl shadow-2xl transform transition-all duration-500 group-hover:scale-105'
            >
              <div
                class='absolute inset-0 bg-linear-to-tl from-blue-600/30 to-transparent z-10 group-hover:opacity-0 transition-opacity duration-500'
              >
              </div>
              <img
                src='/img/bgabout_2.jpg'
                alt='Smart Technology Innovation'
                class='w-full h-[400px] md:h-[500px] object-cover'
              />
              <!-- Decorative border -->
              <div
                class='absolute inset-0 border-4 border-blue-500/20 rounded-2xl'
              >
              </div>
            </div>
            <!-- Floating elements -->
            <div
              class='absolute -top-6 -left-6 bg-white p-4 rounded-full shadow-xl'
              data-aos='zoom-in'
              data-aos-duration='800'
              data-aos-delay='600'
            >
              <svg
                class='w-8 h-8 text-blue-600'
                fill='currentColor'
                viewBox='0 0 20 20'
              >
                <path d='M9 2a1 1 0 000 2h2a1 1 0 100-2H9z'></path>
                <path
                  fill-rule='evenodd'
                  d='M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z'
                  clip-rule='evenodd'></path>
              </svg>
            </div>
          </div>

          <!-- Contenido -->
          <div
            class='w-full md:w-1/2'
            data-aos='fade-right'
            data-aos-duration='1000'
            data-aos-delay='300'
          >
            <div class='prose prose-lg max-w-none'>
              <!-- Decorative element -->
              <div class='flex items-center gap-4 mb-6'>
                <div
                  class='w-12 h-1 bg-linear-to-r from-blue-600 to-indigo-600 rounded-full'
                >
                </div>
                <span
                  class='text-blue-600 font-semibold uppercase tracking-wider text-sm'
                  >{tr('aboutPage.our_story')}</span
                >
              </div>

              <div
                class='text-gray-700 leading-relaxed space-y-4 text-justify'
                set:html={tr('aboutPage.description_2')}
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section
      class='py-16 md:py-20 bg-linear-to-r from-red-600 via-red-500 to-[#9E2D25] relative overflow-hidden'
    >
    </section>
    <div class='container mx-auto px-4 text-center relative z-10'>
      <h2
        class='text-3xl md:text-5xl font-bold text-white mb-6'
        data-aos='fade-up'
        data-aos-duration='1000'
      >
        {tr('aboutPage.ready')}
      </h2>
      <p
        class='text-white/90 text-lg md:text-xl mb-8 max-w-2xl mx-auto'
        data-aos='fade-up'
        data-aos-duration='1000'
        data-aos-delay='200'
      >
        {tr('aboutPage.join_us')}
      </p>
      <div
        class='flex flex-col sm:flex-row gap-4 justify-center'
        data-aos='fade-up'
        data-aos-duration='1000'
        data-aos-delay='400'
      >
        <a
          href='/#quiero-ser-expositor'
          class='bg-white text-red-600 font-bold py-4 px-8 rounded-full text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-xl'
        >
          {tr('menu.banner')}
        </a>
        <a
          href='mailto:claudia.rodriguez@igeco.mx'
          class='bg-transparent border-2 border-white text-white font-bold py-4 px-8 rounded-full text-lg hover:bg-white hover:text-red-600 transition-all duration-300 transform hover:scale-105'
        >
          M√°s Informaci√≥n
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Prose customization */
  .prose {
    max-width: none;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .prose :global(strong) {
    color: #e00d1b;
    font-weight: 700;
  }

  /* Animaciones personalizadas */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Gradientes mejorados */
  .bg-gradient-to-r,
  .bg-gradient-to-br,
  .bg-gradient-to-b,
  .bg-gradient-to-tl,
  .bg-gradient-to-tr {
    background-image: linear-gradient(
      var(--tw-gradient-direction),
      var(--tw-gradient-stops)
    );
  }

  /* Hover effects */
  .group:hover .group-hover\:opacity-0 {
    opacity: 0;
  }

  /* Responsive images */
  @media (max-width: 768px) {
    .md\:h-\[500px\] {
      height: 400px;
    }
  }
</style>
